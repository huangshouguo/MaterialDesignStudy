<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hsg.meterialdesignstudy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".component.ComponentHomeActivity" />
        <activity android:name=".animator.AnimatorHomeActivity" />
        <activity android:name=".apply.ApplyHomeActivity" />
        <activity android:name=".animator.AnimatorFeedbackActivity" />
        <activity android:name=".animator.AnimatorRevealActivity" />
        <activity
            android:name=".animator.AnimatorReveal2Activity"
            android:theme="@style/AppTheme.NoAnimator" />
        <activity
            android:name=".animator.AnimatorTransitionSlideActivity"
            android:theme="@style/AppTheme.CustomAnimator" />
        <activity android:name=".animator.AnimatorTransitionActivity" />
        <activity
            android:name=".animator.AnimatorTransitionFadeActivity"
            android:theme="@style/AppTheme.CustomAnimator" />
        <activity
            android:name=".animator.AnimatorTransitionExplodeActivity"
            android:theme="@style/AppTheme.CustomAnimator" />
        <activity
            android:name=".animator.AnimatorShareActivity"
            android:theme="@style/AppTheme.CustomAnimator" />
    </application>

</manifest>