<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/ToolbarStyle"
        app:title="Components" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_app_bar_demo1"
                style="@style/ButtonStyle"
                android:text="AppBarDemo1" />

            <Button
                android:id="@+id/btn_app_bar_demo2"
                style="@style/ButtonStyle"
                android:text="AppBarDemo2" />

            <Button
                android:id="@+id/btn_app_bar_demo3"
                style="@style/ButtonStyle"
                android:text="AppBarDemo3" />

            <Button
                android:id="@+id/btn_navigation"
                style="@style/ButtonStyle"
                android:text="NavigationView" />

            <Button
                android:id="@+id/btn_tab"
                style="@style/ButtonStyle"
                android:text="Tab" />

            <Button
                android:id="@+id/btn_float_button"
                style="@style/ButtonStyle"
                android:text="FloatButton" />

            <Button
                android:id="@+id/btn_snackbar"
                style="@style/ButtonStyle"
                android:text="Snackbar" />

            <Button
                android:id="@+id/btn_text"
                style="@style/ButtonStyle"
                android:text="Text" />

            <Button
                android:id="@+id/btn_bottom_sheet"
                style="@style/ButtonStyle"
                android:text="BottomSheetDialog" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
