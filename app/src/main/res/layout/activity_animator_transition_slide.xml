            android:src="@drawable/ic_circle_red" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="item1"
            android:textColor="@color/color_gray"
            android:textSize="20dp" />
    </LinearLayout>

